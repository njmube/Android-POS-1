<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
 
    <!-- view background color -->
    <gradient
	  android:startColor="#DE2889"
	  android:endColor="#BA2474"
	  android:angle="270" />
 
    <!-- If you want to add some padding -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp"    >
    </padding>
 
    <!-- Here is the corner radius -->
    <corners
        android:radius="3dp"   >
    </corners>
 
</shape>
