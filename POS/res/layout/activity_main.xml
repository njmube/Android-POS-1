<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.malabon.pos"
    android:id="@+id/mainRelative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111"
    android:gravity="right"
    tools:context=".MainActivity" >

    <android.support.v7.widget.GridLayout
        style="@style/wrapper_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp"
        app:columnCount="2"
        app:rowCount="3" >
    
        <LinearLayout
            style="@style/wrapper_horizontal"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_gravity="left"
            android:background="@drawable/main_background"
            app:layout_column="0"
            app:layout_row="0"
            app:layout_columnSpan="2" >

            <!-- 0 -->     
			<EditText
			    android:id="@+id/txtSearchProduct"
			    android:layout_width="300dip"
			    android:layout_height="wrap_content"
			    android:textSize="30sp"
			    android:inputType="text"
			    android:textColor="#999"
			    android:textStyle="italic"
			    android:visibility="gone">
			</EditText>
			<ImageButton 
               style="@style/image_button_small"
               android:src="@drawable/ic_menu_search" 
               android:contentDescription="@string/imagedesc"
               android:onClick="doSearchProduct" />

            <!-- 1 -->

            <ImageButton
                android:id="@+id/btnPrevCat"
                style="@style/image_button_small"
                android:contentDescription="@string/imagedesc"
                android:onClick="prevCat"
                android:src="@drawable/ic_media_previous" />

            <!-- 2 -->

            <Button
                style="@style/image_button_small"
                android:layout_height="60dp"
                android:onClick="showAllCats"
                android:text="@string/AllCat"
                android:textSize="25sp" />

            <!-- 3 -->
            <!-- put cat buttons -->

            <LinearLayout
                android:id="@+id/catButtonsContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />

            <!--
                    <ImageButton
        		                style="@style/image_button_small"
        		                android:src="@android:drawable/ic_menu_add"
        		                android:onClick="addCategory" />
            -->

            <ImageButton
                android:id="@+id/btnNextCat"
                style="@style/image_button_small"
                android:contentDescription="@string/imagedesc"
                android:onClick="nextCat"
                android:src="@drawable/ic_media_next" />

            <DigitalClock
                style="@style/H2"
                android:layout_width="match_parent"
                android:textAlignment="gravity"
                android:gravity="right"
                android:textColor="#48FF00" />

        </LinearLayout>       

            <ScrollView
                android:id="@+id/productsScrollView"
                android:layout_width="wrap_content"
                android:layout_height="520dp"
                app:layout_column="0"
                app:layout_row="1" >

                <LinearLayout
                    android:id="@+id/productsGrid"
                    style="@style/wrapper_grid"
                    android:layout_gravity="top"
                    android:orientation="vertical" >

                </LinearLayout>
            </ScrollView>

            <LinearLayout
                style="@style/wrapper_vertical"
                android:background="@drawable/orange_button"
                app:layout_column="1"
                app:layout_row="1"
                app:layout_rowSpan="2" >

                <ScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="690dp" >

                    <TableLayout
                        android:id="@+id/productCart"
                        style="@style/wrapper_table"
                        android:layout_width="460dp"
                        android:layout_height="wrap_content"
                        android:stretchColumns="1" >

                        <TableRow style="@style/table_header" >

                            <TextView
                                android:id="@+id/tvCustomerName"
                                style="@style/H2"
                                android:text="@string/CustomerName" />

                            <ImageButton
                                style="@style/image_button_small"
                                android:layout_width="10dp"
                                android:layout_gravity="right"
                                android:contentDescription="@string/imagedesc"
                                android:onClick="addCustomer"
                                android:src="@drawable/ic_input_add" />
                        </TableRow>

                        <TableRow style="@style/table_row" >

                            <TextView
                                style="@style/h3_item"
                                android:text="@string/Name" />

                            <!--
                             <TextView 
			                style="@style/h3_item"
			                android:text="@string/Code" />
                            -->

                            <TextView
                                style="@style/h3_item"
                                android:text="@string/Price" />

                            <!--
                             TextView 
			                style="@style/h3_item"
			                android:text="@string/Disc" />
                            -->

                            <TextView
                                style="@style/h3_item"
                                android:text="@string/Quantity" />
                        </TableRow>

                        <TableRow style="@style/table_row_total" >

                            <TextView style="@style/h3_item" />

                            <!--
					            <TextView 
					                style="@style/h3_item" /> />
                            -->

                            <TextView style="@style/h3_item" />

                            <!--
                                     TextView 
					                style="@style/h3_item" />
                            -->

                            <TextView style="@style/h3_item" />
                        </TableRow>

                        <TableRow style="@style/table_row_total" >

                            <ImageButton
                                style="@style/image_button_small"
                                android:layout_weight="1"
                                android:contentDescription="@string/imagedesc"
                                android:onClick="editOrders"
                                android:src="@drawable/ic_menu_edit" />
                        </TableRow>

                        <TableRow style="@style/table_row" >

                            <TextView
                                style="@style/h3_subtotal"
                                android:text="@string/NetTotal" />

                            <TextView
                                android:id="@+id/txtNetTotal"
                                style="@style/h3_subtotal_amt" />
                        </TableRow>

                        <TableRow style="@style/table_row" >

                            <TextView
                                style="@style/h3_subtotal"
                                android:text="@string/TaxTotal" />

                            <TextView
                                android:id="@+id/txtTaxTotal"
                                style="@style/h3_subtotal_amt" />
                        </TableRow>

                        <TableRow style="@style/table_row_total" >

                            <TextView
                                style="@style/h2_total"
                                android:text="@string/Total" />

                            <TextView
                                android:id="@+id/txtTotal"
                                style="@style/h2_total_amt" />
                        </TableRow>
                    </TableLayout>
                </ScrollView>
            </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="800dp"
            android:layout_alignParentBottom="true"
            android:layout_height="170dp"
            android:background="@drawable/main_background"
            app:layout_column="0"
            app:layout_row="2" >            
            
            <android.support.v7.widget.GridLayout
                style="@style/wrapper_grid"
                android:padding="0dp"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                app:columnCount="3"
                app:rowCount="2" >
                
				<Button
                    style="@style/btn_gray_150"
                    android:layout_width="110dp"
                    android:textSize="15sp"
                    android:onClick="printReceipt"
                    app:layout_row="0"
                    app:layout_column="0"
                    android:text="@string/PrintReceipt" />
                
                <Button
                    style="@style/btn_gray_150"
                    android:layout_width="110dp"
                    android:textSize="15sp"
                    android:onClick="newSale"
                    app:layout_row="0"
                    app:layout_column="1"
                    android:text="@string/NewSale" />               
                

                <Button
                    style="@style/btn_gray_150"
                    android:layout_width="110dp"
                    android:textSize="15sp"
                    android:onClick="cashInOut"
                    app:layout_row="1"
                    app:layout_column="0"
                    android:text="@string/CashInOut" />
                
                <Button
                    android:id="@+id/btnCloseDay"
                    style="@style/btn_gray_150"
                    android:layout_width="110dp"
                    android:textSize="15sp"
                    android:onClick="closeDay"
                    app:layout_row="1"
                    app:layout_column="1"
                    android:text="@string/CloseDay" />
            </android.support.v7.widget.GridLayout>

            <android.support.v7.widget.GridLayout
                style="@style/wrapper_grid"
                android:layout_width="wrap_content"
                android:background="@drawable/popup_bg"
                app:columnCount="3"
                app:rowCount="2" >

                <ImageView
                    android:id="@+id/userThumb"
                    style="@style/user_thumbnail"
                    app:layout_column="0"
                    app:layout_row="0"
                    app:layout_rowSpan="2"
                    android:contentDescription="@string/imagedesc"
                    android:src="@drawable/ic_launcher" />

                <LinearLayout
                    style="@style/wrapper_vertical"
                    app:layout_column="1"
                    app:layout_row="0"
                    app:layout_rowSpan="2" >

                    <TextView
                        android:id="@+id/currentUserName"
                        style="@style/H3" />

                    <TextView
                        style="@style/H3"
                        android:id="@+id/branchName" />
                </LinearLayout>
                <!-- <Button
                    android:id="@+id/btnSwitch"
                    style="@style/btn_green_150"
                    app:layout_column="2"
                    app:layout_row="0"
                    android:onClick="switchUser"
                    android:text="@string/Switch" />  -->
                <Button
                    android:id="@+id/btnLock"
                    style="@style/btn_red_150"
                    android:layout_width="120dp"
                    app:layout_column="2"
                    app:layout_row="0"
                    android:onClick="lockRegister"
                    android:text="@string/Lock" />
                
                <Button
                    style="@style/btn_gray_150"
                    android:layout_width="120dp"
                    android:onClick="sync"
                    app:layout_row="1"
                    app:layout_column="2"
                    android:text="@string/Sync" />
            </android.support.v7.widget.GridLayout>
			
            <Button
                style="@style/btn_green_small"
                android:layout_height="100dp"
                android:layout_width="fill_parent"
                android:layout_margin="20dp"
                android:onClick="pay"
                android:text="@string/Pay" />
        </LinearLayout>
        </android.support.v7.widget.GridLayout>

</RelativeLayout>
