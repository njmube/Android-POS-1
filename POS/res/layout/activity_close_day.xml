                <TextView
                    style="@style/field_label"
                    app:layout_column="0"
                    app:layout_gravity="left"
                    app:layout_row="2"
                    android:text="@string/Deposit" />

                <EditText
                    android:enabled="false"
                    android:id="@+id/cdTxtCounted"
                    style="@style/textbox_numeric"
                    android:layout_width="150dp"
                    app:layout_column="0"
                    app:layout_gravity="right"
                    app:layout_row="0" >
                </EditText>

                <EditText
                    android:id="@+id/cdTxtRegister"
                    style="@style/textbox_numeric"
                    android:layout_width="150dp"
                    app:layout_column="0"
                    app:layout_gravity="right"
                    app:layout_row="1" >
                </EditText>

                <EditText
                    android:id="@+id/cdTxtDeposit"
                    style="@style/textbox_numeric"
                    android:layout_width="150dp"
                    app:layout_column="0"
                    app:layout_gravity="right"
                    app:layout_row="2" >
                </EditText>

                <TextView
                    style="@style/H2"
                    android:layout_width="wrap_content"
                    app:layout_column="0"
                    app:layout_gravity="left"
                    app:layout_row="3"
                    android:text="@string/CashExpected" />

                <TextView
                    android:id="@+id/cdTxtCashExpected"
                    style="@style/H3"
                    android:layout_width="wrap_content"
                    app:layout_column="0"
                    app:layout_gravity="right"
                    app:layout_row="4"
                    android:text="0.00" />

                <TextView
                    style="@style/H2"
                    android:layout_width="wrap_content"
                    app:layout_column="0"
                    app:layout_gravity="left"
                    app:layout_row="5"
                    android:text="@string/CashDifference" />

                <TextView
                    android:id="@+id/cdTxtCashDifference"
                    style="@style/H3"
                    android:layout_width="wrap_content"
