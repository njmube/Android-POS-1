                <android.support.v7.widget.GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_column="4"
                    app:layout_row="0"
                    app:layout_rowSpan="5"
                    android:padding="5dp"
                    app:columnCount="3"
                    app:rowCount="4" >

                    <Button
                        android:id="@+id/btn7n"
                        style="@style/btn_gray_fit"
                        app:layout_column="0"
                        app:layout_row="0"
                        android:text="@string/seven"
                        android:onClick="clickDigit" />

                    <Button
                        android:id="@+id/btn4n"
                        style="@style/btn_gray_fit"
                        app:layout_column="0"
                        app:layout_row="1"
                        android:text="@string/four"
                        android:onClick="clickDigit" />

